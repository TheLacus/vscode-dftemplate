    "QuestorOffer": {
        "category": "message",
        "signature": "QuestorOffer:  [1000]",
        "summary": "What the questor says when the PC makes contact for the quest. This is a required message."
    },
    "RefuseQuest": {
        "category": "message",
        "signature": "RefuseQuest:  [1001]",
        "summary": "What the questor says when the PC refuses the quest offer. This is a required message"
    },
    "AcceptQuest": {
        "category": "message",
        "signature": "AcceptQuest:  [1002]",
        "summary": "What the questor says when the PC makes contact for the quest. This is expected for quests started in person."
    },
    "QuestFailed": {
        "category": "message",
        "signature": "QuestFailed:  [1003]",
        "summary": "What the questor says until the PC completes the quest. This is expected for quests started in person."
    },
    "QuestComplete": {
        "category": "message",
        "signature": "QuestComplete:  [1004]",
        "summary": "What the questor says when the PC completes the quest and returns. This is expected for quests started in person. Certain quest actions will post this message automatically."
    },
    "RumorsDuringQuest": {
        "category": "message",
        "signature": "RumorsDuringQuest:  [1005]",
        "summary": "Gives information that may come up during *Any News?* dialogs the PC has during the quest. "
    },
    "RumorsPostFailure": {
        "category": "message",
        "signature": "RumorsPostFailure:  [1006]",
        "summary": "Gives information that may come up during *Any News?* dialogs the PC has after failing the quest."
    },
    "RumorsPostSuccess": {
        "category": "message",
        "signature": "RumorsPostFailure:  [1007]",
        "summary": "Gives information that may come up during *Any News?* dialogs the PC has after completing the quest."
    },
    "QuestorPostSuccess": {
        "category": "message",
        "signature": "QuestorPostSuccess:  [1008]",
        "summary": "What the questor says to the PC in dialog after a successful quest."
    },
    "QuestorPostFailure": {
        "category": "message",
        "signature": "QuestorPostFailure:  [1009]",
        "summary": "What the questor says to the PC in dialog after a failed quest."
    },
    "QuestLogEntry": {
        "category": "message",
        "signature": "QuestLogEntry:  [1010]",
        "summary": "The message inserted into the PC's log when the quest is accepted. Probably not used automatically."
    },
    "QuestTimeLapse": {
        "category": "message",
        "signature": "QuestTimeLapse:  [1045]",
        "summary": "Displayed when the PC fails to meet a quest with a dead-line. Probably not used automatically."
    },
    "Message": {
        "category": "message",
        "signature": "Message:  messageNumber",
        "summary": "An additional message block.",
        "parameters": [
            {
                "name": "messageNumber",
                "description": "An univocal number for this message."
            }
        ]
    },
    "Item": {
        "category": "definition",
        "signature": "Item _symbol_ [artifact] itemName [range nn to mm]",
        "summary": "An item associated with the quest. Use 'gold' as name to give proportional reward in a optional range.",
        "parameters": [
            {
                "name": "artifact",
                "description": "describes a known Tamriel artifact."
            },
            {
                "name": "itemName",
                "description": "gold or common item."
            },
            {
                "name": "range",
                "description": "range for the gold"
            }
        ]
    },
    "Person": {
        "category": "definition",
        "signature": "Person _symbol_ attribute1 attribute1Value [attribute2]",
        "summary": "A Person encountered in the quest. This can be a permanent npc with a name, optionally spawned at home, or a random npcs from a given group. If gender is not specified, a random one is chosen.",
        "parameters": [
            {
                "name": "attribute1",
                "description": "named, factiontype, group or faction."
            },
            {
                "name": "attribute1Value",
                "description": "the value of attribute1: name of npc or name of group."
            },
            {
                "name": "attribute2",
                "description": "athome for permanent npcs; male, female or nothing for random npcs."
            }
        ]
    },
    "Place": {
        "category": "definition",
        "signature": "Place _symbol_ attribute aPlace",
        "summary": "A Place encountered in the quest. This can be a permanent location in game world or a house in current or remote town. ",
        "parameters": [
            {
                "name": "attribute",
                "description": "permanent, local or remote."
            }
        ]
    },
    "Clock": {
        "category": "definition",
        "signature": "Clock _symbol_ [dd.hh:mm] [aa.bb:cc]",
        "summary": "A Clock or timer used in the quest. Run downs in the given moment or in the given range. If both parameters are omitted, run time is random.",
        "parameters": [
            {
                "name": "dd.hh:mm",
                "description": "specific time or range floor."
            },
            {
                "name": "aa.bb:cc",
                "description": "range ceiling."
            }
        ]
    },
    "Foe": {
        "category": "definition",
        "signature": "Foe _symbol_ is [nn] anEnemy",
        "summary": "One or multiple enemies encountered in the quest. if nn parameter is omitted, default value is 1.",
        "parameters": [
            {
                "name": "nn",
                "description": "number of spawned enemies."
            }
        ]
    }
}