{
    "title": "DFTemplate Documentation",
    "description": "Documentation table for DF Template.",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "symbols": {
            "type": "object",
            "description": "Language symbols that provides a value for the quest state.",
            "additionalProperties": {
                "type": "string",
                "description": "A language symbol."
            }
        },
        "symbolsVariations": {
            "type": "object",
            "description": "Variation schemas for symbols.",
            "additionalProperties": {
                "type": "array",
                "description": "Schema for a symbol type.",
                "items": {
                    "properties": {
                        "word": {
                            "type": "string",
                            "description": "A variation for a generic symbol '$'."
                        },
                        "description": {
                            "type": "string",
                            "description": "Description for this variation; '$' is replaced with the symbol name."
                        }
                    }
                }
            }
        },
        "keywords": {
            "type": "object",
            "description": "Keywords.",
            "additionalProperties": {
                "type": "object",
                "description": "An element",
                "properties": {
                    "category": {
                        "type": "string",
                        "description": "The category of the element."
                    },
                    "signature": {
                        "type": "string",
                        "description": "Signature of the element."
                    },
                    "summary": {
                        "type": "string",
                        "description": "A short description of the element."
                    },
                    "parameters": {
                        "type": "array",
                        "description": "Parameters for a symbol definition.",
                        "items": {
                            "properties": {
                                "name": {
                                    "type": "string",
                                    "description": "The name of the parameter."
                                },
                                "description": {
                                    "type": "string",
                                    "description": "A short description of the parameter."
                                }
                            },
                            "required": [
                                "name",
                                "description"
                            ]
                        }
                    }
                },
                "required": [
                    "summary"
                ]
            }
        },
        "messages": {
            "type": "object",
            "description": "Descriptions for static messages.",
            "additionalProperties": {
                "type": "string",
                "description": "Description for a message."
            }
        }
    },
    "required": [
        "symbols",
        "symbolsVariations",
        "keywords",
        "messages"
    ],
    "default": {}
}